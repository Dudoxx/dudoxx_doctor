<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Profile Form View -->
    <record id="view_dudoxx_doctor_form" model="ir.ui.view">
        <field name="name">dudoxx.doctor.form</field>
        <field name="model">dudoxx.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor Profile">
                <header>
                    <button name="activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('status', '=', 'active')]}"/>
                    <button name="deactivate" string="Deactivate" type="object" attrs="{'invisible': [('status', 'in', ['inactive', 'retired'])]}"/>
                    <button name="retire" string="Retire" type="object" attrs="{'invisible': [('status', '=', 'retired')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="active,inactive,retired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Doctor's Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="specialty"/>
                            <field name="license_number"/>
                            <field name="experience_years"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <field name="photo" widget="image" class="oe_avatar"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Doctor Profile Tree View -->
    <record id="view_dudoxx_doctor_tree" model="ir.ui.view">
        <field name="name">dudoxx.doctor.tree</field>
        <field name="model">dudoxx.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="specialty"/>
                <field name="license_number"/>
                <field name="email"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-danger="status == 'inactive'" decoration-info="status == 'retired'"/>
            </tree>
        </field>
    </record>

    <!-- Rest of the XML content remains the same -->
</odoo>
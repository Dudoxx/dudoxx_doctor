<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_dudoxx_doctor_admin" model="res.groups">
            <field name="name">Doctor Admin</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_dudoxx_doctor_user" model="res.groups">
            <field name="name">Doctor User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_dudoxx_api_key_manager" model="res.groups">
            <field name="name">API Key Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_dudoxx_doctor_admin" model="ir.rule">
            <field name="name">Doctor Admin Access</field>
            <field name="model_id" ref="model_dudoxx_doctor"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_dudoxx_doctor_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_dudoxx_doctor_user" model="ir.rule">
            <field name="name">Doctor User Access</field>
            <field name="model_id" ref="model_dudoxx_doctor"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_dudoxx_doctor_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_dudoxx_api_key_manager" model="ir.rule">
            <field name="name">API Key Manager Access</field>
            <field name="model_id" ref="model_dudoxx_api_key"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_dudoxx_api_key_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>